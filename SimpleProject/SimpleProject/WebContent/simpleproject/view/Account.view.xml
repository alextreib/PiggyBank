<mvc:View controllerName="simpleproject.controller.Account"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
  >
	<Page title="Account">
		<content>
			<List items="{path: '/accounts' , sorter:{path: 'productDescription', group:true}}" showNoData="true">
				<ObjectListItem title="{accountNumber}" type="Navigation" description="{amount}" numberUnit="{currency}"
                    showMarkers="true"
                    number="{parts:[{path:'amount'},{path:'currency'}],type: 'sap.ui.model.type.Currency',formatOptions: {showMeasure: false}}"></ObjectListItem>
			</List>
			
				<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay480"
			minWidth="1024"
			maxContainerCols="2"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanL="4"
			labelSpanM="4"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="2"
			columnsM="2">
			<f:content>
				<core:Title text="My Accounts" />
				<List items="{path: '/accounts' , sorter:{path: 'productDescription', group:true}}" showNoData="true">
				<ObjectListItem title="{accountNumber}" type="Navigation" description="{amount}" numberUnit="{currency}"
                    showMarkers="true"
                    number="{parts:[{path:'amount'},{path:'currency'}],type: 'sap.ui.model.type.Currency',formatOptions: {showMeasure: false}}"></ObjectListItem>
			</List>
				
				<core:Title text="Visualization" />
				<Image  src="http://docs.oracle.com/javafx/2/charts/img/pie-sample.png" width="50em" >
	   			<layoutData>
	   				<l:GridData span="L12 M12 S12"
	   				linebreakL="true"
	   				linebreakM="true"
	   				linebreakS="true" />
	   			</layoutData>
	   		</Image>
			</f:content>
		</f:SimpleForm>
	</VBox>
			
		</content>
		<footer>
  			<OverflowToolbar>
  				<Button type="Back" press="onNavBack">
  					<layoutData>
  						<OverflowToolbarLayoutData moveToOverflow="false" />
  					</layoutData>
  				</Button>
  			</OverflowToolbar>
  		</footer>
	</Page>
	<Label text="Account page"></Label>
</mvc:View>