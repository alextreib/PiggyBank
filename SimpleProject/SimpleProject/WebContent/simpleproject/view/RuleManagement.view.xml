<mvc:View controllerName="simpleproject.controller.RuleManagement"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Accounting Rule Management" >
		<content>
			<VBox>
				<List items="{/}" showNoData="true">
					<items>
						<CustomListItem>
							<HBox class="sapUiSmallMarginBegin smallUiTinyMarginTop">
								<VBox>
									<core:Icon
									src="sap-icon://approvals"
									size="2.5em"
									 class="sapMSLIImgThumbIcon sapUiIcon sapUiIconMirrorInRTL">
										<core:layoutData>
										<FlexItemData growFactor="1"></FlexItemData>
									</core:layoutData>
										
									</core:Icon>
									
								</VBox>
								<VBox>
									<Label text="{ruleName}" />
									<Label text="Border: {border}"/>
									<Label text="Purpose: {purpose}"/>
								</VBox>
							</HBox>
						</CustomListItem>
		<!--					<ObjectListItem title="{ruleName}" type="Navigation" ></ObjectListItem>-->
					</items>
					
				</List>
			</VBox>
		</content>
		<footer>
  			<OverflowToolbar>
  				<Button type="Back" press="onNavBack">
  					<layoutData>
  						<OverflowToolbarLayoutData moveToOverflow="false" />
  					</layoutData>
  				</Button>
  				<ToolbarSpacer />
  				<Button icon="sap-icon://create" press="onNewRuleCreate" ariaLabelledBy="actionButtonLabel" tooltip="Create a new Rule">
  					<layoutData>
  						<OverflowToolbarLayoutData moveToOverflow="false" />
  					</layoutData>
  				</Button>
  			</OverflowToolbar>
  		</footer>
	</Page>
</mvc:View>