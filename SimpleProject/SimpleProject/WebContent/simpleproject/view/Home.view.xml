<mvc:View
  controllerName="simpleproject.controller.Home"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	 xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns="sap.m">
	<Page showHeader="false" class="sapUiContentPadding" enableScrolling="true">
		<content>
						<f:SimpleForm 
			maxContainerCols="2"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Login"
			labelSpanL="6"
			labelSpanM="3"
			emptySpanL="6"
			emptySpanM="4"
			columnsL="1"
			columnsM="1">
				<f:content>
					<Label text="UserName"/>
					<Input id="userID" placeholder="Name"></Input>
					<Label text="Password"/>
					<Input type="Password" placeholder="please enter your password" maxLength="10" required="true" liveChange="onChange"></Input>
					<Label></Label>
					<Label></Label>
					<Button text="Register"></Button>
					<Button text="Login" icon="sap-icon://begin" press="onLogin"></Button>
				</f:content>
			</f:SimpleForm>
		</content>
	</Page>
  
   
</mvc:View>