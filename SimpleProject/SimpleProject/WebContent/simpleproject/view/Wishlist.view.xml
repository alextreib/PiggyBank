<mvc:View controllerName="simpleproject.controller.Wishlist"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m">
	<Page showHeader="true" title="Wishlist" >
		<content>
			<VBox>
				<List items="{/}" showNoData="false">
					<items>
 						<CustomListItem>
							<HBox class="sapUiSmallMarginBegin smallUiTinyMarginTop">
								<VBox>
									<core:Icon
									src="sap-icon://approvals"
									size="2.5em"
									 class="sapMSLIImgThumbIcon sapUiIcon sapUiIconMirrorInRTL">
										<core:layoutData>
										<FlexItemData growFactor="1"></FlexItemData>
									</core:layoutData>
									</core:Icon>
									
								</VBox>
								<VBox>
									<Label text="{product}" />
									<Label text="Price: {price}"/>
									<Label text="Deadline: {date}"/>
								</VBox>
							</HBox>
						</CustomListItem>
		<!--					<ObjectListItem title="{ruleName}" type="Navigation" ></ObjectListItem>-->
				</items>
				</List>
			</VBox>
		</content>
		<footer>
  			<OverflowToolbar>
  				<Button type="Back" press="onNavBack">
  					<layoutData>
  						<OverflowToolbarLayoutData moveToOverflow="false" />
  					</layoutData>
  				</Button>
  				<ToolbarSpacer />
  				<Button icon="sap-icon://activate" press="onNewWishCreate" ariaLabelledBy="actionButtonLabel">
  					<layoutData>
  						<OverflowToolbarLayoutData moveToOverflow="false" />
  					</layoutData>
  				</Button>
  			</OverflowToolbar>
  		</footer>
	</Page>
</mvc:View>