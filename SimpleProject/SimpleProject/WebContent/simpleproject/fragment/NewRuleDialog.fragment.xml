<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Dialog>
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="createRuleForm"
			maxContainerCols="2"
			editable="true"
			layout="ResponsiveGridLayout"
			title="New Rule"
			labelSpanL="3"
			labelSpanM="3"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1"
			class="editableForm">
			<f:content>
				<Label text="Name" />
				<Input value="{RuleName}" id="tf_ruleName" />
				<Label text="ab" />
				<Input value="{Border}" id="tf_border"/>
				
				<Label text="Purpose:" />
				<Input value="{Purpose}" id="tf_purpose"/>
				<Label text="Account:" />
<!--				<Select width="100%">
					<items path="{}">
						<core:Item key="{}" text="{}" />
					</items>
				</Select>-->
					<Button icon="sap-icon://save" press="saveRule" ariaLabelledBy="actionButtonLabel">

  				</Button>
			</f:content>
		</f:SimpleForm>
	</VBox>
	</Dialog>
</core:FragmentDefinition>