<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
 <Dialog>
 <VBox class="sapUiSmallMargin">
  <f:SimpleForm id="createWishForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" title="New Wish" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
   <f:content>
    <Label text="Product"/>
    <Input value="{Product}" id="tf_product" placeholder="your new IT gadget" required="true"/>
    <Label text="Price"/>
    <Input value="{Price}" id="tf_price" required="true"/>
    <Label text="Deadline"/>
    <Input value="{Date}" id="tf_date"/>
     <Button icon="sap-icon://save" press="saveWish" ariaLabelledBy="actionButtonLabel" text="Save Wish" type="Emphasized">
      </Button>
   </f:content>
  </f:SimpleForm>
 </VBox>
 </Dialog>
</core:FragmentDefinition>